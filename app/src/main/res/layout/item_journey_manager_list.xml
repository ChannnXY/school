<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp">
    <TextView
        android:id="@+id/tv_manager_identity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_rec_orange"
        android:text="@string/journeyManager_teacher"
        style="@style/padding_16.white"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_manager_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginLeft="10dp"
        android:text="王老师"/>
    <TextView
        android:id="@+id/tv_manager_state"
        style="@style/padding_16.white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_rec_green"
        android:gravity="center"
        android:text="已签到"/>
</LinearLayout>